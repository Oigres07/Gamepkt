---
interface Props {
  error: string
  description: string
}

const { error, description } = Astro.props
---

<div class='flex flex-col justify-center items-center'>
  <h1 class='sm:text-4xl text-2xl font-bold text-red-500 text-center'>{error}</h1>
  <span class='sm:text-base text-sm text-center'>{description}</span>
</div>
